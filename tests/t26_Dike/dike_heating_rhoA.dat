#        PTBox_TempType          =   none                            # Temperature condition witin the box [none, constant, linear, halfspace]
#  <PhaseTransitionEnd>


# Strain softening parameters

  	 <SofteningStart>
		ID   = 0
		A    = 0.95 	 # 0.87	# reduction ratio = 1-FinalParameter/InitialParameter
		APS1 = 0.01      # 0.5  # make really small so weakenening makes it directly weak
		APS2 = 0.15             # after this is reached it weakens cohesion to (1-A)*cohesion -> 0.1*30=3
                healTau = 0.04	
	<SofteningEnd>

	<SofteningStart>
		ID	= 1
		healTau = 1e-24
	<SofteningEnd>

        <SofteningStart>
                ID      = 2
                healTau = 0.04
        <SofteningEnd>

# DIKES

        <DikeStart>
                ID = 0
                Mf = 1           # value for dike/magma- accommodated extension, between 0 and 1, in the back of the box, for phase dike
                Mb = 1           # value for dike/magma- accommodated extension, between 0 and 1, in the front of the box, for phase dike
                PhaseID = 2
#		PhaseTransID = 0
#                t0_dike = 0.11    # optional, in Myr, start time for moving dike, cannot be smaller than minimum time step 
#                t1_dike = 0.3     # optional, in Myr, end time
#                v_dike  = 1.0     # optional, in cm/yr, velocity with which dike moves (as reference: 10cm/yr = 100km/Myr)
        <DikeEnd>

#	 <DikeStart>		
#                ID = 1
#                Mf = 0.4           # value for dike/magma- accommodated extension, between 0 and 1, in the back of the box, for phase dike
#                Mb = 0.4           # value for dike/magma- accommodated extension, between 0 and 1, in the front of the box, for phase dike
#                PhaseID = 3
#               PhaseTransID = 0
#                t0_dike = 0.11    # optional, in Myr, start time for moving dike, cannot be smaller than minimum time step
#                t1_dike = 0.3     # optional, in Myr, end time
#                v_dike  = 1.0     # optional, in cm/yr, velocity with which dike moves (as reference: 10cm/yr = 100km/Myr)
#        <DikeEnd>

# Material parameters

  	# Sticky Air
	<MaterialStart>
		ID		= 0	  # phase id
		rho   		= 100 	  # density
		eta		= 1e18 	  # viscosity
		 Cp             = 1.0e3   # specific heat (capacity)  [J/kg/K]
		 k              = 1e-7    # thermal conductivity   [W/m/K]
		 healID         = 2
	<MaterialEnd>


    # Dike
    <MaterialStart>
        ID              = 2      # phase id
        rho             = 1000   # density
        G               = 4e10
# disl Rheology
	n		= 3.5     # power law exponent
       	Bn  		= 1.1e-16 # DISLOCATION creep pre-exponential constant
       	En  		= 530e3   # activation energy
       	Vn  		= 15e-6   # activation volume
	Cp              = 1000   # specific heat (capacity)
	k               = 1e-6     # thermal conductivity
	Latent_hx       = 0.00001     # J/kg 
	T_liq           = 1300    # celsius
	T_sol           = 1000    # celsius
        ch              = 30e6
        healID 	        = 1
        fr  		= 30      # initial friction angle
     <MaterialEnd>

